--FOR SSMS
--Single Column Search
SELECT      COLUMN_NAME,TABLE_NAME, TABLE_SCHEMA
FROM        INFORMATION_SCHEMA.COLUMNS
WHERE       COLUMN_NAME LIKE '%unit_name%'
ORDER BY    TABLE_NAME ASC

--Multi Column Search
SELECT		C1.COLUMN_NAME AS Column1 ,C2.COLUMN_NAME AS Column2,C2.TABLE_NAME, C2.TABLE_SCHEMA
FROM		INFORMATION_SCHEMA.COLUMNS as C1

INNER JOIN (SELECT	COLUMN_NAME,TABLE_NAME, TABLE_SCHEMA
			FROM	INFORMATION_SCHEMA.COLUMNS
			WHERE	COLUMN_NAME LIKE 'vpo_number') as C2
			ON		C1.TABLE_NAME = C2.TABLE_NAME

WHERE		C1.COLUMN_NAME LIKE 'material_id'
ORDER BY	C1.TABLE_NAME ASC


--FOR TERADATA
SELECT ColumnName, TableName
FROM DBC.COLUMNSV
WHERE DatabaseName = 'FARISHADI' and
ColumnName like 'ColumnName' 
